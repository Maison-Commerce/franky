<div class="maison_commerce_advantages" style="background-color: {{ section.settings.section_bg_color }}; padding-top: {{ section.settings.padding_top_desktop }}px; padding-bottom: {{ section.settings.padding_bottom_desktop }}px; padding-left: {{ section.settings.padding_left_desktop }}px; padding-right: {{ section.settings.padding_right_desktop }}px;">
  <div class="maison_commerce_advantages__container">
    {% if section.settings.heading != blank %}
      <h2 class="maison_commerce_advantages__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="maison_commerce_advantages__cards">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'advantage' %}
            <div class="maison_commerce_advantages__card" {{ block.shopify_attributes }}>
              {% if block.settings.icon != blank %}
                <div class="maison_commerce_advantages__card-icon">
                  {{
                    block.settings.icon
                    | image_url: width: 200
                    | image_tag: loading: 'lazy', alt: block.settings.title, class: 'maison_commerce_advantages__card-icon-img'
                  }}
                </div>
              {% endif %}
              <div class="maison_commerce_advantages__card-content">
                {% if block.settings.title != blank %}
                  <h3 class="maison_commerce_advantages__card-title">{{ block.settings.title }}</h3>
                {% endif %}
                {% if block.settings.description != blank %}
                  <div class="maison_commerce_advantages__card-description">
                    {{ block.settings.description }}
                  </div>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .maison_commerce_advantages {
    width: 100%;
    background-color: {{ section.settings.section_bg_color }};
  }

  @media (max-width: 950px) {
    .maison_commerce_advantages {
      padding-top: {{ section.settings.padding_top_mobile }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px !important;
      padding-left: {{ section.settings.padding_left_mobile }}px !important;
      padding-right: {{ section.settings.padding_right_mobile }}px !important;
    }
  }

  .maison_commerce_advantages__container {
    max-width: 1320px;
    margin: 0 auto;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 32px;
  }

  @media (max-width: 950px) {
    .maison_commerce_advantages__container {
      gap: 16px;
    }
  }

  .maison_commerce_advantages__heading {
    font-family: "Swarsh Daisy", serif;
    font-size: {{ section.settings.heading_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
    margin: 0;
    text-align: center;
    text-transform: capitalize;
  }

  .maison_commerce_advantages__heading p {
    margin: 0;
    line-height: inherit;
    color: inherit;
  }

  .maison_commerce_advantages__heading em {
    font-style: italic;
  }

  @media (max-width: 950px) {
    .maison_commerce_advantages__heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
      line-height: 1.3;
    }
  }

  .maison_commerce_advantages__cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ section.settings.card_gap_desktop }}px;
    width: 100%;
  }

  @media (max-width: 950px) {
    .maison_commerce_advantages__cards {
      grid-template-columns: 1fr;
      gap: {{ section.settings.card_gap_mobile }}px;
    }
  }

  .maison_commerce_advantages__card {
    background-color: {{ section.settings.card_bg_color }};
    padding: {{ section.settings.card_padding }}px;
    border-radius: 8px;
    display: flex;
    gap: {{ section.settings.icon_content_gap }}px;
    align-items: flex-start;
  }

  .maison_commerce_advantages__card-icon {
    flex-shrink: 0;
    width: {{ section.settings.icon_size_desktop }}px;
    height: {{ section.settings.icon_size_desktop }}px;
    background: white;
    border-radius: 9.455px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  @media (max-width: 950px) {
    .maison_commerce_advantages__card-icon {
      width: {{ section.settings.icon_size_mobile }}px;
      height: {{ section.settings.icon_size_mobile }}px;
    }
  }

  .maison_commerce_advantages__card-icon-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 35%;
  }

  .maison_commerce_advantages__card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
    min-width: 0;
  }

  .maison_commerce_advantages__card-title {
    font-family: "Neue Haas Grotesk Display Pro", sans-serif;
    font-size: {{ section.settings.title_font_size_desktop }}px;
    font-weight: 600;
    line-height: 1.5;
    color: {{ section.settings.title_color }};
    margin: 0;
    white-space: nowrap;
  }

  @media (max-width: 950px) {
    .maison_commerce_advantages__card-title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
    }
  }

  .maison_commerce_advantages__card-description {
    font-family: "Neue Haas Grotesk Display Pro", sans-serif;
    font-size: {{ section.settings.description_font_size_desktop }}px;
    font-weight: 500;
    line-height: 1.5;
    color: {{ section.settings.description_color }};
  }

  .maison_commerce_advantages__card-description p {
    margin: 0;
    line-height: inherit;
    color: inherit;
  }

  @media (max-width: 950px) {
    .maison_commerce_advantages__card-description {
      font-size: {{ section.settings.description_font_size_mobile }}px;
    }
  }
</style>

