{% endschema %}

<div class="image-text-blocks" style="padding-top: {{ section.settings.padding_top_desktop }}px; padding-bottom: {{ section.settings.padding_bottom_desktop }}px; padding-left: {{ section.settings.padding_left_desktop }}px; padding-right: {{ section.settings.padding_right_desktop }}px;">
  <div class="image-text-blocks__container">
    <div class="image-text-blocks__wrapper">
      {% if section.settings.image != blank %}
        <div class="image-text-blocks__image-wrapper">
          {{
            section.settings.image
            | image_url: width: 1000
            | image_tag: loading: 'lazy', alt: section.settings.title, class: 'image-text-blocks__image'
          }}
        </div>
      {% endif %}

      <div class="image-text-blocks__content-container">
        <div class="image-text-blocks__header">
          {% if section.settings.number_badge != blank %}
            <div class="image-text-blocks__number-badge">
              <span class="image-text-blocks__number-text">{{ section.settings.number_badge }}</span>
            </div>
          {% endif %}
          {% if section.settings.title != blank %}
            <h2 class="image-text-blocks__title">{{ section.settings.title }}</h2>
          {% endif %}
        </div>

        <div class="image-text-blocks__content">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'text_block' %}
                {% if block.settings.text_type == 'accent' %}
                  <p class="image-text-blocks__text image-text-blocks__text--accent">
                    {{ block.settings.text }}
                  </p>
                {% elsif block.settings.text_type == 'accent_bold' %}
                  <p class="image-text-blocks__text image-text-blocks__text--accent-bold">
                    {{ block.settings.text }}
                  </p>
                {% elsif block.settings.text_type == 'semi_bold' %}
                  <p class="image-text-blocks__text image-text-blocks__text--semi-bold">
                    {{ block.settings.text }}
                  </p>
                {% else %}
                  <p class="image-text-blocks__text">
                    {{ block.settings.text }}
                  </p>
                {% endif %}

              {% when 'list_item' %}
                <div class="image-text-blocks__list-item" {{ block.shopify_attributes }}>
                  {% if block.settings.icon_type == 'check' %}
                    <svg width="{{ section.settings.list_item_icon_size }}" height="{{ section.settings.list_item_icon_size }}" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22ZM17.4571 9.45711L11 15.9142L6.79289 11.7071L8.20711 10.2929L11 13.0858L16.0429 8.04289L17.4571 9.45711Z" fill="#12B76A"/>
                    </svg>
                  {% elsif block.settings.icon_type == 'cross' %}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM12 10.5858L9.17157 7.75736L7.75736 9.17157L10.5858 12L7.75736 14.8284L9.17157 16.2426L12 13.4142L14.8284 16.2426L16.2426 14.8284L13.4142 12L16.2426 9.17157L14.8284 7.75736L12 10.5858Z" fill="#F04438"/>
                      </svg>                      
                  {% else %}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM7 17H9C9 15.3431 10.3431 14 12 14C13.6569 14 15 15.3431 15 17H17C17 14.2386 14.7614 12 12 12C9.23858 12 7 14.2386 7 17ZM8 11C8.82843 11 9.5 10.3284 9.5 9.5C9.5 8.67157 8.82843 8 8 8C7.17157 8 6.5 8.67157 6.5 9.5C6.5 10.3284 7.17157 11 8 11ZM16 11C16.8284 11 17.5 10.3284 17.5 9.5C17.5 8.67157 16.8284 8 16 8C15.1716 8 14.5 8.67157 14.5 9.5C14.5 10.3284 15.1716 11 16 11Z" fill="#F04438"/>
                    </svg>                      
                  {% endif %}
                  <span class="image-text-blocks__list-item-text">{{ block.settings.text }}</span>
                </div>

              {% when 'question_block' %}
                <div class="image-text-blocks__question-block" {{ block.shopify_attributes }}>
                  <p class="image-text-blocks__question-text">{{ block.settings.text }}</p>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .image-text-blocks {
    width: 100%;
    max-width: 1080px;
    margin: 0 auto;
  }

  @media (max-width: 749px) {
    .image-text-blocks {
      padding-top: {{ section.settings.padding_top_mobile }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px !important;
      padding-left: {{ section.settings.padding_left_mobile }}px !important;
      padding-right: {{ section.settings.padding_right_mobile }}px !important;
    }
  }

  .image-text-blocks__container {
    max-width: 100%;
    margin: 0 auto;
    width: 100%;
  }

  .image-text-blocks__wrapper {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    gap: {{ section.settings.image_content_gap_desktop }}px;
    width: 100%;
  }

  @media (max-width: 749px) {
    .image-text-blocks__wrapper {
      flex-direction: column;
      gap: {{ section.settings.container_gap_mobile }}px;
    }
  }

  .image-text-blocks__image-wrapper {
    flex-shrink: 0;
    width: {{ section.settings.image_size_desktop }}px;
    height: {{ section.settings.image_size_desktop }}px;
  }

  @media (max-width: 749px) {
    .image-text-blocks__image-wrapper {
      width: 100%;
      height: {{ section.settings.image_height_mobile }}px;
    }
  }

  .image-text-blocks__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  @media (max-width: 749px) {
    .image-text-blocks__image {
      border-radius: 16px;
    }
  }

  .image-text-blocks__content-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.container_gap }}px;
    padding: {{ section.settings.container_padding_desktop }}px;
    background-color: {{ section.settings.container_bg_color }};
    border: 1px solid rgba(0, 0, 0, 0.05);
    border-radius: {{ section.settings.container_border_radius_desktop }}px;
  }

  @media (max-width: 749px) {
    .image-text-blocks__content-container {
      padding: {{ section.settings.container_padding_mobile }}px;
      gap: {{ section.settings.container_gap_mobile }}px;
      border-radius: {{ section.settings.container_border_radius_mobile }}px;
    }
  }

  .image-text-blocks__header {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: {{ section.settings.number_title_gap }}px;
    width: 100%;
