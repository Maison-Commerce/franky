<div class="maison_commerce_faq_badge" style="background: linear-gradient(to bottom, {{ section.settings.bg_color_start }}, {{ section.settings.bg_color_end }}); padding-top: {{ section.settings.padding_top_desktop }}px; padding-bottom: {{ section.settings.padding_bottom_desktop }}px; padding-left: {{ section.settings.padding_left_desktop }}px; padding-right: {{ section.settings.padding_right_desktop }}px;">
  {% if section.settings.background_ball_image != blank %}
    <div class="maison_commerce_faq_badge__background-image">
      {{
        section.settings.background_ball_image
        | image_url: width: 2000
        | image_tag: loading: 'lazy', alt: '', class: 'maison_commerce_faq_badge__background-image-img'
      }}
    </div>
  {% endif %}
  <div class="maison_commerce_faq_badge__container">
    {% if section.settings.heading != blank %}
      <h2 class="maison_commerce_faq_badge__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="maison_commerce_faq_badge__badges">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'badge' %}
            <div class="maison_commerce_faq_badge__badge" {{ block.shopify_attributes }}>
              <div class="maison_commerce_faq_badge__badge-content">
                {% if block.settings.icon != blank %}
                  <div class="maison_commerce_faq_badge__badge-icon">
                    {{
                      block.settings.icon
                      | image_url: width: 200
                      | image_tag: loading: 'lazy', alt: block.settings.title, class: 'maison_commerce_faq_badge__badge-icon-img'
                    }}
                  </div>
                {% endif %}
                <div class="maison_commerce_faq_badge__badge-text">
                  {% if block.settings.title != blank %}
                    <h3 class="maison_commerce_faq_badge__badge-title">{{ block.settings.title }}</h3>
                  {% endif %}
                  {% if block.settings.description != blank %}
                    <div class="maison_commerce_faq_badge__badge-description">
                      {{ block.settings.description }}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .maison_commerce_faq_badge {
    width: 100%;
    background: linear-gradient(to bottom, {{ section.settings.bg_color_start }}, {{ section.settings.bg_color_end }});
    position: relative;
    overflow: hidden;
  }

  @media (max-width: 950px) {
    .maison_commerce_faq_badge {
      padding-top: {{ section.settings.padding_top_mobile }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px !important;
      padding-left: {{ section.settings.padding_left_mobile }}px !important;
      padding-right: {{ section.settings.padding_right_mobile }}px !important;
    }
  }

  .maison_commerce_faq_badge__background-image {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  .maison_commerce_faq_badge__background-image-img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .maison_commerce_faq_badge__container {
    max-width: 1280px;
    margin: 0 auto;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
    position: relative;
    z-index: 1;
  }

  @media (max-width: 950px) {
    .maison_commerce_faq_badge__background-image-img {
      aspect-ratio: 1/0.2;
    }
    .maison_commerce_faq_badge__container {
      gap: 32px;
    }
  }

  .maison_commerce_faq_badge__heading {
    font-family: "Swarsh Daisy", serif;
    font-size: {{ section.settings.heading_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
    margin: 0;
    text-align: center;
    text-transform: capitalize;
  }

  .maison_commerce_faq_badge__heading p {
    margin: 0;
    line-height: inherit;
    color: inherit;
  }

  .maison_commerce_faq_badge__heading em {
    font-style: italic;
  }

  @media (max-width: 950px) {
    .maison_commerce_faq_badge__heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
      line-height: 1.4;
    }
  }

  .maison_commerce_faq_badge__badges {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ section.settings.card_gap_desktop }}px;
    width: 100%;
  }

  @media (max-width: 950px) {
    .maison_commerce_faq_badge__badges {
      grid-template-columns: 1fr;
      gap: {{ section.settings.card_gap_mobile }}px;
    }
  }

  .maison_commerce_faq_badge__badge {
    padding: {{ section.settings.card_padding }}px;
    border-radius: {{ section.settings.card_border_radius }}px;
  }

  @media (max-width: 950px) {
    .maison_commerce_faq_badge__badge {
        padding: 0;
    }
  }

  .maison_commerce_faq_badge__badge-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ section.settings.icon_content_gap_desktop }}px;
    justify-content: flex-end;
  }

  @media (max-width: 950px) {
    .maison_commerce_faq_badge__badge-content {
      flex-direction: row;
      align-items: flex-start;
      gap: {{ section.settings.icon_content_gap_mobile }}px;
    }
  }

  .maison_commerce_faq_badge__badge-icon {
    flex-shrink: 0;
    width: {{ section.settings.icon_size_desktop }}px;
    height: {{ section.settings.icon_size_desktop }}px;
    background: white;
    border-radius: 900px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 0 9px;
  }

  @media (max-width: 950px) {
    .maison_commerce_faq_badge__badge-icon {
      width: {{ section.settings.icon_size_mobile }}px;
      height: {{ section.settings.icon_size_mobile }}px;
      padding: 0 5.85px;
    }
  }

  .maison_commerce_faq_badge__badge-icon-img {
    width: 32px;
    height: 32px;
    object-fit: contain;
    display: block;
  }

  @media (max-width: 950px) {
    .maison_commerce_faq_badge__badge-icon-img {
        width: 20.8px;
        height: 20.8px;
    }
  }

  .maison_commerce_faq_badge__badge-text {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.title_description_gap }}px;
    align-items: center;
    justify-content: center;
    text-align: center;
    width: 100%;
  }

  @media (max-width: 950px) {
    .maison_commerce_faq_badge__badge-text {
      align-items: flex-start;
      text-align: left;
      gap: 8px;
    }
  }

  .maison_commerce_faq_badge__badge-title {
    font-family: "Neue Haas Grotesk Display Pro", sans-serif;
    font-size: {{ section.settings.title_font_size_desktop }}px;
    font-weight: 600;
    line-height: 1.5;
    color: {{ section.settings.title_color }};
    margin: 0;
  }

  @media (max-width: 950px) {
    .maison_commerce_faq_badge__badge-title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
    }
  }

  .maison_commerce_faq_badge__badge-description {
    font-family: "Neue Haas Grotesk Display Pro", sans-serif;
    font-size: {{ section.settings.description_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.description_color }};
  }

  .maison_commerce_faq_badge__badge-description p {
    margin: 0;
    line-height: inherit;
    color: inherit;
  }

  .maison_commerce_faq_badge__badge-description strong {
    font-weight: 700;
  }

  @media (max-width: 950px) {
    .maison_commerce_faq_badge__badge-description {
      font-size: {{ section.settings.description_font_size_mobile }}px;
    }
  }
</style>

