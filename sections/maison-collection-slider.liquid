    }
  }

  .maison-collection-slider-section-nav-button {
    border: 1.5px solid #E9EBE9;
    background: transparent;
    border-radius: 90px;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    padding: 16px;
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  .maison-collection-slider-section-nav-button:hover {
    background-color: #F8FFF6;
    border-color: #2E432F;
  }

  @media (max-width: 950px) {
    .maison-collection-slider-section-nav-button {
      width: 48px;
      height: 48px;
      padding: 12px;
    }
  }

  .maison-collection-slider-section-nav-button svg {
    width: 24px;
    height: 24px;
  }

  .maison-collection-slider-section-swiper {
    width: 100%;
    overflow: hidden;
  }

  .maison-collection-slider-section-slide {
    height: auto;
    flex-shrink: initial!important;
    width: fit-content!important;
  }

  .maison-collection-slider-section-pagination {
    display: flex;
    gap: 4px;
    justify-content: center;
