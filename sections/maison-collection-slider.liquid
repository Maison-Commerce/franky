    width: 100%;
    background: #FFF;
  }

  .maison-collection-slider-section-swiper .swiper-wrapper{
    display: flex;
  }

  @media (max-width: 950px) {
    .maison-collection-slider-section {
      padding-top: {{ section.settings.padding_top_mobile }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px !important;
      padding-left: {{ section.settings.padding_left_mobile }}px !important;
      padding-right: {{ section.settings.padding_right_mobile }}px !important;
    }
  }

  .maison-collection-slider-section-wrapper {
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  @media (max-width: 950px) {
    .maison-collection-slider-section-wrapper {
      gap: 24px;
    }
  }

  .maison-collection-slider-section-header {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    width: 100%;
  }

  @media (max-width: 950px) {
    .maison-collection-slider-section-header {
      justify-content: center;
      align-items: center;
    }
  }

  .maison-collection-slider-section-heading {
    color: {{ section.settings.heading_color }};
    font-family: "Swarsh Daisy", serif;
    font-size: {{ section.settings.heading_font_size_desktop }}px;
    font-style: normal;
    font-weight: 400;
    line-height: 1.2;
    margin: 0;
    text-transform: capitalize;
  }

  .maison-collection-slider-section-heading em {
    font-style: italic;
  }

  @media (max-width: 950px) {
    .maison-collection-slider-section-heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
      line-height: 1.4;
      text-align: center;
    }
  }

  .maison-collection-slider-section-nav {
    display: flex;
    gap: 24px;
    align-items: center;
  }

  .maison-collection-slider-section-nav--desktop {
    display: flex;
  }

  .maison-collection-slider-section-nav--mobile {
    display: none;
    justify-content: center;
    width: 100%;
  }

  @media (max-width: 950px) {
