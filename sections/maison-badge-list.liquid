{% schema %}
{
  "name": "Maison Badge List",
  "settings": [
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top (Desktop)",
      "default": 18
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom (Desktop)",
      "default": 18
    },
    {
      "type": "range",
      "id": "padding_left_desktop",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Left (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_right_desktop",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Right (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_left_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Left (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_right_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Right (Mobile)",
      "default": 20
    },
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Section Background Color",
      "default": "#2E432F"
    },
    {
      "type": "range",
      "id": "badge_text_font_size_desktop",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Badge Text Font Size (Desktop)",
      "default": 16
    },
    {
      "type": "range",
      "id": "badge_text_font_size_mobile",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Badge Text Font Size (Mobile)",
      "default": 14
    },
    {
      "type": "color",
      "id": "badge_text_color",
      "label": "Badge Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "icon_size_desktop",
      "min": 20,
      "max": 48,
      "step": 1,
      "unit": "px",
      "label": "Icon Size (Desktop)",
      "default": 32
    },
    {
      "type": "range",
      "id": "icon_size_mobile",
      "min": 20,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Icon Size (Mobile)",
      "default": 24
    },
    {
      "type": "range",
      "id": "badge_gap_desktop",
      "min": 0,
      "max": 32,
      "step": 1,
      "unit": "px",
      "label": "Gap Between Badges (Desktop)",
      "default": 0
    },
    {
      "type": "range",
      "id": "badge_gap_mobile",
      "min": 8,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Gap Between Badges (Mobile)",
      "default": 18
    },
    {
      "type": "range",
      "id": "icon_text_gap",
      "min": 8,
      "max": 16,
      "step": 1,
      "unit": "px",
      "label": "Gap Between Icon and Text",
      "default": 12
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Clean ingredients"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Maison Badge List",
      "blocks": [
        {
          "type": "badge",
          "settings": {
            "text": "Clean ingredients"
          }
        },
        {
          "type": "badge",
          "settings": {
            "text": "Cruelty-free"
          }
        },
        {
          "type": "badge",
          "settings": {
            "text": "Vegan"
          }
        },
        {
          "type": "badge",
          "settings": {
            "text": "Gluten-free"
          }
        },
        {
          "type": "badge",
          "settings": {
            "text": "Low Sugar"
          }
        },
        {
          "type": "badge",
          "settings": {
            "text": "Non-GMO"
          }
        },
        {
          "type": "badge",
          "settings": {
            "text": "No fillers"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<div class="maison_commerce_badge_list" style="background-color: {{ section.settings.section_bg_color }}; padding-top: {{ section.settings.padding_top_desktop }}px; padding-bottom: {{ section.settings.padding_bottom_desktop }}px; padding-left: {{ section.settings.padding_left_desktop }}px; padding-right: {{ section.settings.padding_right_desktop }}px;">
  <div class="maison_commerce_badge_list__container">
    <div class="maison_commerce_badge_list__badges">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'badge' %}
            <div class="maison_commerce_badge_list__badge" {{ block.shopify_attributes }}>
              {% if block.settings.icon != blank %}
                <div class="maison_commerce_badge_list__badge-icon">
                  {{
                    block.settings.icon
                    | image_url: width: 100
                    | image_tag: loading: 'lazy', alt: block.settings.text, class: 'maison_commerce_badge_list__badge-icon-img'
                  }}
                </div>
              {% endif %}
              {% if block.settings.text != blank %}
                <p class="maison_commerce_badge_list__badge-text">{{ block.settings.text }}</p>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .maison_commerce_badge_list {
    width: 100%;
    background-color: {{ section.settings.section_bg_color }};
  }

  @media (max-width: 950px) {
    .maison_commerce_badge_list {
      padding-top: {{ section.settings.padding_top_mobile }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px !important;
      padding-left: {{ section.settings.padding_left_mobile }}px !important;
      padding-right: {{ section.settings.padding_right_mobile }}px !important;
    }
  }

  .maison_commerce_badge_list__container {
    max-width: 1280px;
    margin: 0 auto;
    width: 100%;
  }

  .maison_commerce_badge_list__badges {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: {{ section.settings.badge_gap_desktop }}px;
  }

  @media (max-width: 950px) {
    .maison_commerce_badge_list__badges {
      justify-content: center;
      gap: {{ section.settings.badge_gap_mobile }}px;
    }
  }

  .maison_commerce_badge_list__badge {
    display: flex;
    align-items: center;
    gap: {{ section.settings.icon_text_gap }}px;
    flex-shrink: 0;
  }

  .maison_commerce_badge_list__badge-icon {
    width: {{ section.settings.icon_size_desktop }}px;
    height: {{ section.settings.icon_size_desktop }}px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 950px) {
    .maison_commerce_badge_list__badge-icon {
      width: {{ section.settings.icon_size_mobile }}px;
      height: {{ section.settings.icon_size_mobile }}px;
    }
  }

  .maison_commerce_badge_list__badge-icon-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  .maison_commerce_badge_list__badge-text {
    font-family: "Neue Haas Grotesk Display Pro", sans-serif;
    font-size: {{ section.settings.badge_text_font_size_desktop }}px;
    font-weight: 500;
    line-height: 1.5;
    color: {{ section.settings.badge_text_color }};
    margin: 0;
    white-space: nowrap;
  }

  @media (max-width: 950px) {
    .maison_commerce_badge_list__badge-text {
      font-size: {{ section.settings.badge_text_font_size_mobile }}px;
    }
  }
</style>

