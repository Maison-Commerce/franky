<div class="support-section" style="background-color: {{ section.settings.section_bg_color }}; padding-top: {{ section.settings.padding_top_desktop }}px; padding-bottom: {{ section.settings.padding_bottom_desktop }}px; padding-left: {{ section.settings.padding_left_desktop }}px; padding-right: {{ section.settings.padding_right_desktop }}px;">
  <div class="support-section__container">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="support-section__header">
        {% if section.settings.title != blank %}
          <h2 class="support-section__title">
            {{ section.settings.title }}
          </h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="support-section__subtitle">
            {{ section.settings.subtitle }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="support-section__grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'support_option' %}
              <div class="support-section__card" {{ block.shopify_attributes }}>
                <div class="support-section__card-content">
                  {% if block.settings.icon != blank %}
                    <div class="support-section__icon-wrapper">
                      {{
                        block.settings.icon
                        | image_url: width: 200
                        | image_tag: loading: 'lazy', alt: block.settings.title, class: 'support-section__icon'
                      }}
                    </div>
                  {% endif %}
                  <div class="support-section__card-text">
                    {% if block.settings.title != blank %}
                      <h3 class="support-section__card-title">
                        {{ block.settings.title }}
                      </h3>
                    {% endif %}
                    {% if block.settings.description != blank %}
                      <p class="support-section__card-description">
                        {{ block.settings.description }}
                      </p>
                    {% endif %}

                    {% if block.settings.button_text != blank %}
                      {% if block.settings.button_action == 'copy_email' %}
                        <button
                          type="button"
                          class="support-section__button"
                          onclick="copyToClipboard('{{ block.settings.email_to_copy }}', this)"
                        >
                          {{ block.settings.button_text }}
                        </button>
                      {% elsif block.settings.button_action == 'call' %}
                        <a
                          href="tel:{{ block.settings.phone_number }}"
                          class="support-section__button"
                        >
                          {{ block.settings.button_text }}
                        </a>
                      {% else %}
                        <a
                          href="{{ block.settings.button_link }}"
                          class="support-section__button"
                        >
                          {{ block.settings.button_text }}
                        </a>
                      {% endif %}
                    {% endif %}
                  </div>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% else %}
      <div class="support-section__empty">
        <p>Please add support options to display.</p>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .support-section {
    margin: 20px;
    width: calc(100% - 40px);
    background-color: {{ section.settings.section_bg_color }};
  }

  @media (max-width: 749px) {
    .support-section {
      padding-top: {{ section.settings.padding_top_mobile }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px !important;
      padding-left: {{ section.settings.padding_left_mobile }}px !important;
      padding-right: {{ section.settings.padding_right_mobile }}px !important;
      margin: 10px;
      width: calc(100% - 20px);
    }
  }

  .support-section__container {
    max-width: 1440px;
    margin: 0 auto;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ section.settings.title_section_gap_desktop }}px;
  }

  @media (max-width: 749px) {
    .support-section__container {
      gap: {{ section.settings.title_section_gap_mobile }}px;
    }
  }

  .support-section__header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ section.settings.title_gap }}px;
    max-width: 600px;
    width: 100%;
  }

  .support-section__title {
    font-family: 'Swarsh Daisy', serif;
    font-size: {{ section.settings.title_font_size_desktop }}px;
    font-weight: 400;
    text-transform: capitalize;
    line-height: {{ section.settings.title_line_height_desktop }};
    color: {{ section.settings.title_color }};
    margin: 0;
    text-align: center;
  }

  @media (max-width: 749px) {
    .support-section__title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
      line-height: {{ section.settings.title_line_height_mobile }};
    }
  }

  .support-section__subtitle {
    font-family: "Neue Haas Grotesk Display Pro", sans-serif;
    font-size: {{ section.settings.subtitle_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.subtitle_color }};
    opacity: {{ section.settings.subtitle_opacity | divided_by: 100.0 }};
    margin: 0;
    text-align: center;
  }

  @media (max-width: 749px) {
    .support-section__subtitle {
      font-family: "Cabin", sans-serif;
      font-size: {{ section.settings.subtitle_font_size_mobile }}px;
    }
  }

  .support-section__grid {
    display: flex;
    flex-direction: row;
    gap: {{ section.settings.card_gap_desktop }}px;
    align-items: stretch;
    justify-content: space-between;
    width: 100%;
  }

  @media (max-width: 749px) {
    .support-section__grid {
      flex-direction: column;
      gap: {{ section.settings.card_gap_mobile }}px;
    }
  }

  .support-section__card {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.card_content_gap }}px;
    padding: {{ section.settings.card_padding }}px;
    width: {{ section.settings.card_width_desktop }}px;
    flex: 1;
  }

  @media (max-width: 749px) {
    .support-section__card {
      width: 100%;
    }
  }

  .support-section__card-content {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.icon_gap }}px;
    flex: 1;
  }

  @media (max-width: 749px) {
    .support-section__card-content {
      flex-direction: row;
    }
  }

  .support-section__icon-wrapper {
    width: {{ section.settings.icon_size_desktop }}px;
    height: {{ section.settings.icon_size_desktop }}px;
    background-color: {{ section.settings.icon_bg_color }};
    border-radius: {{ section.settings.icon_border_radius_desktop }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  @media (max-width: 749px) {
    .support-section__icon-wrapper {
      width: {{ section.settings.icon_size_mobile }}px;
      height: {{ section.settings.icon_size_mobile }}px;
      border-radius: {{ section.settings.icon_border_radius_mobile }}px;
    }
  }

  .support-section__icon {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .support-section__card-text {
    display: flex;
    flex-direction: column;
    gap: 4px;
    justify-content: center;
    flex: 1;
  }

  .support-section__card-title {
    font-family: 'Swarsh Daisy', serif;
    font-size: {{ section.settings.card_title_font_size_desktop }}px;
    font-weight: 400;
    line-height: {{ section.settings.card_title_line_height_desktop }};
    color: {{ section.settings.card_title_color }};
    margin: 0;
  }

  @media (max-width: 749px) {
    .support-section__card-title {
      font-size: {{ section.settings.card_title_font_size_mobile }}px;
      line-height: {{ section.settings.card_title_line_height_mobile }};
    }
  }

  .support-section__card-description {
    font-family: "Neue Haas Grotesk Display Pro", sans-serif;
    font-size: {{ section.settings.card_description_font_size_desktop }}px;
    font-weight: 500;
    line-height: 1.5;
    color: {{ section.settings.card_description_color }};
    opacity: {{ section.settings.card_description_opacity | divided_by: 100.0 }};
    margin: 0;
  }

  @media (max-width: 749px) {
    .support-section__card-description {
      font-size: {{ section.settings.card_description_font_size_mobile }}px;
    }
  }

  .support-section__button {
    width: {{ section.settings.button_width }}px;
    height: {{ section.settings.button_height }}px;
    border-radius: {{ section.settings.button_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    text-decoration: underline;
    gap: 8px;
    padding: 8px 0;
    font-family: "Neue Haas Grotesk Display Pro", sans-serif;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: 600;
    line-height: 1.5;
    color: {{ section.settings.button_text_color }};
    background: transparent;
    border: none;
    cursor: pointer;
    transition: opacity 0.2s ease;
    margin-top: 14px;
  }

  @media (max-width: 749px) {
    .support-section__button {
      margin-top: 0;
    }
  }

  .support-section__button:hover {
    opacity: 0.8;
  }

  .support-section__empty {
    text-align: center;
    padding: 40px 20px;
    color: #98A2B3;
  }
</style>

<script>
  function copyToClipboard(text, button) {
    navigator.clipboard.writeText(text).then(function() {
      const originalText = button.textContent;
      button.textContent = 'Copied!';
      setTimeout(function() {
        button.textContent = originalText;
      }, 2000);
    }).catch(function(err) {
      console.error('Failed to copy text: ', err);
    });
  }
</script>

