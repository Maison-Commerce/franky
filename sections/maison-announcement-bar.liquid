{% schema %}
{
  "name": "Maison Announcement Bar",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color",
      "id": "bar_bg_color",
      "label": "Bar Background Color",
      "default": "#CBFDC1"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Padding Top (Desktop)",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom (Desktop)",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_left_desktop",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Left (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_right_desktop",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Right (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_left_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Left (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_right_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Right (Mobile)",
      "default": 20
    },
    {
      "type": "header",
      "content": "Typography Settings"
    },
    {
      "type": "range",
      "id": "text_font_size_desktop",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Text Font Size (Desktop)",
      "default": 14
    },
    {
      "type": "range",
      "id": "text_font_size_mobile",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Text Font Size (Mobile)",
      "default": 14
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#2E432F"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#2E432F"
    },
    {
      "type": "header",
      "content": "Mobile Scroll Settings"
    },
    {
      "type": "range",
      "id": "scroll_delay",
      "min": 2,
      "max": 10,
      "step": 0.5,
      "unit": "s",
      "label": "Scroll Delay (Mobile)",
      "default": 3,
      "info": "Time to display each announcement before scrolling"
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "min": 0.5,
      "max": 2,
      "step": 0.1,
      "unit": "s",
      "label": "Scroll Speed (Mobile)",
      "default": 0.5,
      "info": "Transition speed between announcements"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Stronger Potent Doses"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Maison Announcement Bar",
      "blocks": [
        {
          "type": "announcement",
          "settings": {
            "text": "Stronger Potent Doses"
          }
        },
        {
          "type": "announcement",
          "settings": {
            "text": "Vegan, Keto, Gluten and Dairy Free"
          }
        },
        {
          "type": "announcement",
          "settings": {
            "text": "Quality Ingredients - made in the USA"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<div class="maison_commerce_announcement_bar" style="background-color: {{ section.settings.bar_bg_color }}; padding-top: {{ section.settings.padding_top_desktop }}px; padding-bottom: {{ section.settings.padding_bottom_desktop }}px; padding-left: {{ section.settings.padding_left_desktop }}px; padding-right: {{ section.settings.padding_right_desktop }}px;">
  {% if section.blocks.size > 0 %}
    <div class="maison_commerce_announcement_bar__container">
      <div class="maison_commerce_announcement_bar__desktop">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'announcement' %}
              <div class="maison_commerce_announcement_bar__item" {{ block.shopify_attributes }}>
                <div class="maison_commerce_announcement_bar__icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
                    <g clip-path="url(#clip0_8344_1354{{ block.id }})">
                        <path d="M9 0.6875C13.5909 0.6875 17.3125 4.40913 17.3125 9C17.3125 13.5909 13.5909 17.3125 9 17.3125C4.40913 17.3125 0.6875 13.5909 0.6875 9C0.6875 4.40913 4.40913 0.6875 9 0.6875Z" stroke="#2E432F"/>
                        <path d="M13.0003 5.96252L7.50031 11.4625L5.00031 8.96252" stroke="#2E432F" stroke-width="1.125" stroke-linecap="round" stroke-linejoin="round"/>
                    </g>
                    <defs>
                        <clipPath id="clip0_8344_1354{{ block.id }}">
                        <rect width="18" height="18" fill="white"/>
                        </clipPath>
                    </defs>
                  </svg>
                </div>
                {% if block.settings.text != blank %}
                  <p class="maison_commerce_announcement_bar__text">
                    {{ block.settings.text }}
                  </p>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>

      <div class="maison_commerce_announcement_bar__mobile">
        <div class="swiper maison_commerce_announcement_bar__swiper">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'announcement' %}
                  <div class="swiper-slide maison_commerce_announcement_bar__slide">
                    <div class="maison_commerce_announcement_bar__item" {{ block.shopify_attributes }}>
                      <div class="maison_commerce_announcement_bar__icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
                          <g clip-path="url(#clip0_8344_1354_mobile_{{ block.id }})">
                            <path d="M9 0.6875C13.5909 0.6875 17.3125 4.40913 17.3125 9C17.3125 13.5909 13.5909 17.3125 9 17.3125C4.40913 17.3125 0.6875 13.5909 0.6875 9C0.6875 4.40913 4.40913 0.6875 9 0.6875Z" stroke="#2E432F"/>
                            <path d="M13.0003 5.96252L7.50031 11.4625L5.00031 8.96252" stroke="#2E432F" stroke-width="1.125" stroke-linecap="round" stroke-linejoin="round"/>
                          </g>
                          <defs>
                            <clipPath id="clip0_8344_1354_mobile_{{ block.id }}">
                              <rect width="18" height="18" fill="white"/>
                            </clipPath>
                          </defs>
                        </svg>
                      </div>
                      {% if block.settings.text != blank %}
                        <p class="maison_commerce_announcement_bar__text">
                          {{ block.settings.text }}
                        </p>
                      {% endif %}
                    </div>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  {% endif %}
</div>

<style>
  .maison_commerce_announcement_bar {
    width: 100%;
    background-color: {{ section.settings.bar_bg_color }};
  }

  @media (max-width: 950px) {
    .maison_commerce_announcement_bar {
      padding-top: {{ section.settings.padding_top_mobile }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px !important;
      padding-left: {{ section.settings.padding_left_mobile }}px !important;
      padding-right: {{ section.settings.padding_right_mobile }}px !important;
    }
  }

  .maison_commerce_announcement_bar__container {
    max-width: 1280px;
    margin: 0 auto;
    width: 100%;
  }

  .maison_commerce_announcement_bar__desktop {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
  }

  @media (max-width: 950px) {
    .maison_commerce_announcement_bar__desktop {
      display: none;
    }
  }

  .maison_commerce_announcement_bar__mobile {
    display: none;
    width: 100%;
    position: relative;
  }

  @media (max-width: 950px) {
    .maison_commerce_announcement_bar__mobile {
      display: block;
    }
  }

  .maison_commerce_announcement_bar__swiper {
    width: 100%;
    overflow: hidden;
  }

  .maison_commerce_announcement_bar__swiper .swiper-wrapper {
    display: flex;
  }

  .maison_commerce_announcement_bar__slide {
    width: 100%;
    flex-shrink: 0;
  }

  @media (max-width: 950px) {
    .maison_commerce_announcement_bar__mobile .maison_commerce_announcement_bar__item {
      width: 100%;
      justify-content: center;
      padding: 0;
    }
  }

  .maison_commerce_announcement_bar__item {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .maison_commerce_announcement_bar__icon {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .maison_commerce_announcement_bar__icon svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  .maison_commerce_announcement_bar__text {
    font-family: "Neue Haas Grotesk Display Pro", sans-serif;
    font-size: {{ section.settings.text_font_size_desktop }}px;
    font-weight: 600;
    line-height: 1.5;
    color: {{ section.settings.text_color }};
    margin: 0;
  }

  @media (max-width: 950px) {
    .maison_commerce_announcement_bar__text {
      font-size: {{ section.settings.text_font_size_mobile }}px;
    }
  }
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const swiperContainer = document.querySelector('#shopify-section-{{ section.id }} .maison_commerce_announcement_bar__swiper');
    
    if (swiperContainer) {
      const swiper = new Swiper('.maison_commerce_announcement_bar__swiper', {
        slidesPerView: 1,
        spaceBetween: 0,
        loop: true,
        autoplay: {
          delay: {{ section.settings.scroll_delay | times: 1000 }},
          disableOnInteraction: false,
          pauseOnMouseEnter: false,
        },
        speed: {{ section.settings.scroll_speed | times: 1000 }},
        allowTouchMove: true,
        grabCursor: false,
      });
    }
  });
</script>


