  "presets": [
    {
      "name": "Maison Base USPs",
      "blocks": [
        {
          "type": "usp",
          "settings": {
            "title": "Free Shipping",
            "description": "On all orders over $50"
          }
        },
        {
          "type": "usp",
          "settings": {
            "title": "Subscribe & Save",
            "description": "Save 15% with auto-delivery"
          }
        },
        {
          "type": "usp",
          "settings": {
            "title": "Exceptional Support",
            "description": "Real humans, real help, 7 days a week"
          }
        }
      ]
    }
  ]
