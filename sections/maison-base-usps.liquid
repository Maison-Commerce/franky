{% endschema %}

<div class="maison_commerce_base_usps" style="background-color: {{ section.settings.section_bg_color }}; padding-top: {{ section.settings.padding_top_desktop }}px; padding-bottom: {{ section.settings.padding_bottom_desktop }}px; padding-left: {{ section.settings.padding_left_desktop }}px; padding-right: {{ section.settings.padding_right_desktop }}px;">
  <div class="maison_commerce_base_usps__container">
    {% if section.blocks.size > 0 %}
      <div class="maison_commerce_base_usps__grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'usp' %}
              <div class="maison_commerce_base_usps__card" {{ block.shopify_attributes }}>
                {% if block.settings.icon != blank %}
                  <div class="maison_commerce_base_usps__icon-wrapper">
                    {{
                      block.settings.icon
                      | image_url: width: 200
                      | image_tag: loading: 'lazy', alt: block.settings.title, class: 'maison_commerce_base_usps__icon'
                    }}
                  </div>
                {% endif %}
                <div class="maison_commerce_base_usps__card_text">
                    {% if block.settings.title != blank %}
                        <h3 class="maison_commerce_base_usps__title">
                            {{ block.settings.title }}
                        </h3>
                    {% endif %}
                    {% if block.settings.description != blank %}
                        <p class="maison_commerce_base_usps__description">
                            {{ block.settings.description }}
                        </p>
                    {% endif %}
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% else %}
      <div class="maison_commerce_base_usps__empty">
        <p>Please add USPs to display.</p>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .maison_commerce_base_usps {
    width: 100%;
    background-color: {{ section.settings.section_bg_color }};
  }

  @media (max-width: 950px) {
    .maison_commerce_base_usps {
      padding-top: {{ section.settings.padding_top_mobile }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px !important;
      padding-left: {{ section.settings.padding_left_mobile }}px !important;
      padding-right: {{ section.settings.padding_right_mobile }}px !important;
    }
  }

  .maison_commerce_base_usps__container {
    max-width: 1320px;
    margin: 0 auto;
    width: 100%;
  }

  .maison_commerce_base_usps__grid {
    display: flex;
    gap: {{ section.settings.card_gap_desktop }}px;
    align-items: flex-start;
    justify-content: space-between;
  }

  @media (max-width: 950px) {
    .maison_commerce_base_usps__grid {
      flex-direction: column;
      gap: {{ section.settings.card_gap_mobile }}px;
    }
  }

  .maison_commerce_base_usps__card {
    display: flex;
    align-items: center;
    gap: 24px;
    padding: 18px;
  }

  @media (max-width: 950px) {
    .maison_commerce_base_usps__card {
      gap: 12px;
      padding: 0;
      align-items: flex-start;
    }
  }

  .maison_commerce_base_usps__icon-wrapper {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    background-color: {{ section.settings.icon_bg_color }};
    border-radius: {{ section.settings.icon_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  @media (max-width: 950px) {
    .maison_commerce_base_usps__icon-wrapper {
        width: 52px;
        height: 52px;
    }
  }

  .maison_commerce_base_usps__icon {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  @media (max-width: 950px) {
    .maison_commerce_base_usps__icon {
        width: 20.8px;
        height: 20.8px;
    }
  }

  .maison_commerce_base_usps__title {
    font-family: 'Swarsh Daisy', serif;
    font-size: {{ section.settings.title_font_size_desktop }}px;
    font-weight: 400;
    line-height: {{ section.settings.title_line_height_desktop }};
    color: {{ section.settings.title_color }};
    margin: 0;
  }

  @media (max-width: 950px) {
    .maison_commerce_base_usps__title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
      line-height: {{ section.settings.title_line_height_mobile }};
    }
  }

  .maison_commerce_base_usps__description {
    font-family: "Neue Haas Grotesk Display Pro", sans-serif;
    font-size: {{ section.settings.description_font_size_desktop }}px;
    font-weight: 500;
    line-height: 1.5;
    color: {{ section.settings.description_color | hex_to_rgba: 0.75 }};
    margin: 0;
  }

  @media (max-width: 950px) {
    .maison_commerce_base_usps__description {
      font-size: {{ section.settings.description_font_size_mobile }}px;
    }
  }

  .maison_commerce_base_usps__card_text{
    display: flex;
    gap: 4px;
    flex-direction: column;
  }

  .maison_commerce_base_usps__empty {
    text-align: center;
    padding: 40px 20px;
    color: #98A2B3;
  }
</style>

