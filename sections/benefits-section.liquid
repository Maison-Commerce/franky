<div class="benefits-section" style="background-color: {{ section.settings.section_bg_color }}; padding-top: {{ section.settings.padding_top_desktop }}px; padding-bottom: {{ section.settings.padding_bottom_desktop }}px; padding-left: {{ section.settings.padding_left_desktop }}px; padding-right: {{ section.settings.padding_right_desktop }}px;">
  <div class="benefits-section__container">
    {% if section.blocks.size > 0 %}
      <div class="benefits-section__grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'benefit' %}
              <div class="benefits-section__card" {{ block.shopify_attributes }}>
                {% if block.settings.icon != blank %}
                  <div class="benefits-section__icon-wrapper">
                    {{
                      block.settings.icon
                      | image_url: width: 200
                      | image_tag: loading: 'lazy', alt: block.settings.title, class: 'benefits-section__icon'
                    }}
                  </div>
                {% endif %}
                <div class="benefits-section__card-text">
                  {% if block.settings.title != blank %}
                    <h3 class="benefits-section__title">
                      {{ block.settings.title }}
                    </h3>
                  {% endif %}
                  {% if block.settings.description != blank %}
                    <p class="benefits-section__description">
                      {{ block.settings.description }}
                    </p>
                  {% endif %}
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% else %}
      <div class="benefits-section__empty">
        <p>Please add benefits to display.</p>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .benefits-section {
    width: 100%;
    background-color: {{ section.settings.section_bg_color }};
  }

  @media (max-width: 749px) {
    .benefits-section {
      padding-top: {{ section.settings.padding_top_mobile }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px !important;
      padding-left: {{ section.settings.padding_left_mobile }}px !important;
      padding-right: {{ section.settings.padding_right_mobile }}px !important;
    }
  }

  .benefits-section__container {
    max-width: 1440px;
    margin: 0 auto;
    width: 100%;
  }

  .benefits-section__grid {
    display: flex;
    flex-direction: row;
    gap: {{ section.settings.card_gap_desktop }}px;
    align-items: stretch;
    justify-content: stretch;
  }

  @media (max-width: 749px) {
    .benefits-section__grid {
      flex-direction: column;
      gap: {{ section.settings.card_gap_mobile }}px;
    }
  }

  .benefits-section__card {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: {{ section.settings.icon_gap_desktop }}px;
    padding: 18px;
    flex: 1;
  }

  @media (max-width: 749px) {
    .benefits-section__card {
      gap: {{ section.settings.icon_gap_mobile }}px;
      padding: 0;
      align-items: flex-start;
    }
  }

  .benefits-section__icon-wrapper {
    width: {{ section.settings.icon_size_desktop }}px;
    height: {{ section.settings.icon_size_desktop }}px;
    background-color: {{ section.settings.icon_bg_color }};
    border-radius: {{ section.settings.icon_border_radius_desktop }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  @media (max-width: 749px) {
    .benefits-section__icon-wrapper {
      width: {{ section.settings.icon_size_mobile }}px;
      height: {{ section.settings.icon_size_mobile }}px;
      border-radius: {{ section.settings.icon_border_radius_mobile }}px;
    }
  }

  .benefits-section__icon {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  @media (max-width: 749px) {
    .benefits-section__icon {
      width: 20.8px;
      height: 20.8px;
    }
  }

  .benefits-section__card-text {
    display: flex;
    flex-direction: column;
    gap: 4px;
    justify-content: center;
    flex: 1;
  }

  .benefits-section__title {
    font-family: 'Swarsh Daisy', serif;
    font-size: {{ section.settings.title_font_size_desktop }}px;
    font-weight: 400;
    line-height: {{ section.settings.title_line_height_desktop }};
    color: {{ section.settings.title_color }};
    margin: 0;
    text-transform: capitalize;
  }

  @media (max-width: 749px) {
    .benefits-section__title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
      line-height: {{ section.settings.title_line_height_mobile }};
    }
  }

  .benefits-section__description {
    font-family: "Neue Haas Grotesk Display Pro", sans-serif;
    font-size: {{ section.settings.description_font_size }}px;
    font-weight: 500;
    line-height: 1.5;
    color: {{ section.settings.description_color }};
    opacity: {{ section.settings.description_opacity | divided_by: 100.0 }};
    margin: 0;
  }

  .benefits-section__empty {
    text-align: center;
    padding: 40px 20px;
    color: #98A2B3;
  }
</style>

